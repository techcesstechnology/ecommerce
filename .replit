modules = ["nodejs-18", "web", "postgresql-16"]

[nix]
channel = "stable-25_05"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "dev"

[[workflows.workflow]]
name = "dev"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[[ports]]
localPort = 3000
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3002

[[ports]]
localPort = 35867
externalPort = 3003

[[ports]]
localPort = 40115
externalPort = 4200

[[ports]]
localPort = 42817
externalPort = 3000

[[ports]]
localPort = 44477
externalPort = 5000

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "cd backend && PORT=5000 NODE_ENV=production npm start"]
build = ["sh", "-c", "npm install && npm run build"]
