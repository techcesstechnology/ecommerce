# =====================================================
# FreshRoute Environment Configuration
# =====================================================
# IMPORTANT: Copy this file to .env and fill in your values
# Never commit the .env file to version control
# =====================================================

# =====================================================
# Application Environment
# =====================================================
# Options: development, production, test, staging
NODE_ENV=development

# =====================================================
# API Server Configuration
# =====================================================
BACKEND_PORT=5000
BACKEND_HOST=localhost
API_PREFIX=/api
API_VERSION=v1

# =====================================================
# Database Configuration (PostgreSQL)
# =====================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=freshroute_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10

# Database Options
# Set to 'true' only in development for auto-schema sync
DB_SYNC=false
DB_LOGGING=false
# Enable SSL for production databases
DB_SSL=false

# =====================================================
# Redis Configuration (Caching & Sessions)
# =====================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =====================================================
# JWT & Authentication Configuration
# =====================================================
# IMPORTANT: Use strong, unique secrets (min 32 chars)
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_here_change_in_production_min_32_chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_change_in_production_min_32_chars
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=freshroute
JWT_AUDIENCE=freshroute-users

# =====================================================
# Security Configuration
# =====================================================
# Bcrypt rounds (10-12 recommended, higher is more secure but slower)
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# =====================================================
# Rate Limiting Configuration
# =====================================================
# General API rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =====================================================
# CORS Configuration
# =====================================================
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000,http://localhost:5000,http://localhost:19006

# =====================================================
# Business Settings
# =====================================================
# Tax rate as decimal (e.g., 0.15 = 15%)
TAX_RATE=0.15

# Currency settings
CURRENCY=USD
CURRENCY_SYMBOL=$

# Shipping configuration
SHIPPING_FEE_BASE=5.00
SHIPPING_FEE_PER_KM=0.50
FREE_SHIPPING_THRESHOLD=50.00

# Order limits
MIN_ORDER_AMOUNT=10.00
MAX_ORDER_AMOUNT=10000.00

# =====================================================
# Email Configuration
# =====================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@freshroute.com
EMAIL_FROM_NAME=FreshRoute

# =====================================================
# Payment Gateway Configuration
# =====================================================
# Options: stripe, paypal, mock
PAYMENT_PROVIDER=mock
PAYMENT_API_KEY=
PAYMENT_API_SECRET=
PAYMENT_WEBHOOK_SECRET=

# =====================================================
# Cloud Storage Configuration
# =====================================================
# Options: local, aws, azure, gcp
STORAGE_PROVIDER=local
LOCAL_STORAGE_PATH=./uploads

# AWS S3 Configuration (if using AWS)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# =====================================================
# Logging Configuration
# =====================================================
# Options: error, warn, info, debug, verbose
LOG_LEVEL=debug
# Options: json, text
LOG_FORMAT=json
LOG_DIRECTORY=./logs
# Rate limiting for logs (prevents log flooding)
LOG_RATE_LIMIT_WINDOW_MS=60000
LOG_RATE_LIMIT_MAX=100

# =====================================================
# APM Monitoring Configuration
# =====================================================
# Enable Application Performance Monitoring (e.g., New Relic, DataDog)
APM_ENABLED=false
APM_SERVICE_NAME=freshroute-backend
APM_API_KEY=
# Sampling rate for APM (0.0 to 1.0, e.g., 0.1 = 10% of requests)
APM_SAMPLING_RATE=0.1

# =====================================================
# Sentry Error Tracking Configuration
# =====================================================
# Enable Sentry for error tracking and monitoring
SENTRY_ENABLED=false
SENTRY_DSN=
# Sample rate for performance traces (0.0 to 1.0)
SENTRY_TRACES_SAMPLE_RATE=0.1
# Sample rate for profiling (0.0 to 1.0)
SENTRY_PROFILES_SAMPLE_RATE=0.1

# =====================================================
# Analytics Configuration
# =====================================================
# Enable analytics tracking
ANALYTICS_ENABLED=false
# Options: segment, mixpanel, amplitude, mock
ANALYTICS_PROVIDER=mock
ANALYTICS_API_KEY=

# =====================================================
# Frontend Configuration (React)
# =====================================================
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_NAME=FreshRoute

# =====================================================
# Mobile Configuration (React Native/Expo)
# =====================================================
EXPO_PUBLIC_API_URL=http://localhost:5000/api
