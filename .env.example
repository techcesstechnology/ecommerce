# Application Environment
NODE_ENV=development

# Backend Configuration
BACKEND_PORT=5000
BACKEND_HOST=localhost

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=freshroute_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# Test Database Configuration (Optional - for running tests)
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=freshroute_test_db
TEST_DB_USER=postgres
TEST_DB_PASSWORD=your_test_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Rate Limiting Configuration (Optional - defaults provided)
# Login endpoint rate limiting
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_LOGIN_WINDOW=900000  # 15 minutes in milliseconds

# Registration endpoint rate limiting
RATE_LIMIT_REGISTER_MAX=3
RATE_LIMIT_REGISTER_WINDOW=3600000  # 1 hour in milliseconds

# General API rate limiting
RATE_LIMIT_GENERAL_MAX=100
RATE_LIMIT_GENERAL_WINDOW=900000  # 15 minutes in milliseconds

# Frontend Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_NAME=FreshRoute

# Mobile Configuration
EXPO_PUBLIC_API_URL=http://localhost:5000/api

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:19006

# Payment Gateway (For future implementation)
PAYMENT_API_KEY=
PAYMENT_API_SECRET=

# Email Configuration (For future implementation)
EMAIL_HOST=
EMAIL_PORT=
EMAIL_USER=
EMAIL_PASSWORD=

# AWS/Cloud Storage (For future implementation)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
S3_BUCKET_NAME=
